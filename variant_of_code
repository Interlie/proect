import tkinter as tk
from tkinter import messagebox, font
import base64

class Base64App:
    def __init__(self, root):
        self.root = root
        self.root.title("Base64 Encoder/Decoder")
        self.root.geometry("400x300")
        self.root.configure(bg="#e0f7fa")

        # Настройка шрифтов
        self.header_font = font.Font(family="Helvetica", size=14, weight="bold")
        self.button_font = font.Font(family="Helvetica", size=12)

        # Создаем элементы интерфейса
        self.label_message = tk.Label(root, text="Введите сообщение:", bg="#e0f7fa", font=self.header_font)
        self.label_message.pack(pady=10)

        self.entry_message = tk.Entry(root, width=50, font=self.button_font, bd=2, relief=tk.SUNKEN)
        self.entry_message.pack(pady=10, padx=10)

        self.button_encode = tk.Button(root, text="Закодировать в Base64", command=self.encode_base64, bg="#4CAF50", fg="white", font=self.button_font, bd=2, relief=tk.RAISED)
        self.button_encode.pack(pady=5, padx=10)

        self.button_decode = tk.Button(root, text="Декодировать из Base64", command=self.decode_base64, bg="#2196F3", fg="white", font=self.button_font, bd=2, relief=tk.RAISED)
        self.button_decode.pack(pady=5, padx=10)

        self.button_exit = tk.Button(root, text="Выход", command=root.quit, bg="#f44336", fg="white", font=self.button_font, bd=2, relief=tk.RAISED)
        self.button_exit.pack(pady=20, padx=10)

    def encode_base64(self):
        message = self.entry_message.get()
        if message:
            encoded_message = base64.b64encode(message.encode('utf-8')).decode('utf-8')
            messagebox.showinfo("Закодированное сообщение", encoded_message)
        else:
            messagebox.showwarning("Предупреждение", "Пожалуйста, введите сообщение для кодирования.")

    def decode_base64(self):
        base64_message = self.entry_message.get()
        if base64_message:
            try:
                decoded_message = base64.b64decode(base64_message.encode('utf-8')).decode('utf-8')
                messagebox.showinfo("Декодированное сообщение", decoded_message)
            except Exception as e:
                messagebox.showerror("Ошибка", f"Ошибка при декодировании: {e}")
        else:
            messagebox.showwarning("Предупреждение", "Пожалуйста, введите сообщение для декодирования.")

# Создаем основное окно
root = tk.Tk()
app = Base64App(root)

# Запуск основного цикла приложения
root.mainloop()


